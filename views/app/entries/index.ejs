<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../../public/head.ejs %>
  </head>

  <body>
    <h1 style="color: white; text-shadow: 3px 3px black;">Journal Entry Page</h1>
    <form action="/sessions?_method=DELETE" method="post">
      <input type="submit" value="Logout" class="waves-effect waves-light btn">
    </form>
    <ul>
      <% for(let i = 0; i < entries.length; i++){ %>
        <li style="display: flex; justify-content: center; align-items: center;">
          <div style="height: 36px; background: white; border-radius: 2px; position: relative; margin-right: 5px; display: flex; align-items: center;" class="">
            <%=entries[i].date%>
            <a style="color: blue; padding-left: 5px; padding-right: 5px; text-decoration: underline" href="/entries/<%=entries[i].id%>">
              <%=entries[i].title%>
            </a>
          </div>
          <a class="waves-effect waves-light btn" href="/entries/<%=entries[i].id%>/edit">Edit</a>

          <form action="/entries/<%=entries[i].id%>?_method=DELETE" method="POST">
            <input style="margin-left: 5px;" class="waves-effect waves-light btn" type="submit" value="DELETE" />
          </form>
        </li>
      <% } %>
    </ul>
    <a href="/new" class="waves-effect waves-light btn">Create an Entry</a>
  </body>
</html>
